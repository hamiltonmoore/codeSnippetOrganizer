<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>homepage</title>
</head>

<body>
    <div class="wrapper">
        <div class="container">
            <h1>Snippet Storage Box</h1>
            <nav>
                <a href="/auth/login">login</a>
                <a href="/auth/signup">signup</a>
            </nav>
            <div class="snippets">
                <h1>Snippet List</h1>
                {{#Snippet}}
                <p>title: {{title}} language: {{language}}</p>
                <p> notes: {{notes}}</p>
                <p>body:{{body}}</p>
                <form action="/viewSnippet" method="POST">
                    <button type="submit">View this Snippet</button>
                </form>
                <form action="/delete/{{_id}}" method="POST">
                    <button type="submit">Delete</button>
                </form>
                {{/Snippet}} {{^Snippet}}
                <p>Click on the make a snippet button</p>
                {{/Snippet}}
            </div>
            <section class="openWindow">
                <button onclick="openCreateSnippet()">make a snippet</button>
            </section>
            <section class=" createSnippet ">
                <form action="/createSnippet " method="POST ">
                    <input type="text " name="title " placeholder="title ">
                    <input type="text " name="language " placeholder="language ">
                    <textarea rows="3 " cols="50 " name="notes " placeholder="notes "></textarea>
                    <textarea rows="5 " cols="50 " name="body " placeholder="your snippet "></textarea>
                    <button type="submit ">create snippet</button>
                </form>
            </section>
        </div>
    </div>
    <script>
        function openCreateSnippet(event) {
            let sec = document.querySelector(".openWindow ");
            let newWindow = sec.document.querySelector("form > button");
            var popupCreate = document.querySelector(".createSnippet");
            if (newWindow.onclick == true) {
                popupCreate.style.display = "block"; 
            else {
                    popupCreate.style.display = "none";
                }
    </script>
</body>

</html>